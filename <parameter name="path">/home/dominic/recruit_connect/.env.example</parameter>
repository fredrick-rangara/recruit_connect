# JWT Token Expiration
JWT_ACCESS_TOKEN_EXPIRES_HOURS=1
JWT_REFRESH_TOKEN_EXPIRES_DAYS=7

# Server Configuration
FLASK_ENV=development
FLASK_DEBUG=1
